<h2 class="center">Course Table</h2>
<a href="/courses/new"> 
    <span class="button">Create Course</span>
</a>
<table class ="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>MaxStudents</th>
            <th>Cost</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(course => { %>
            <tr>
                <td>
                    <a href="<%= `/course/$courses.id` %> ">
                        <%= course.title %>
                    </a>
                </td>
                <td>
                    <%= course.description %>
                </td>
                <td>
                    <%= course.maxStudents %>
                </td>
                <td>
                    <%= course.cost %>
                </td>

                <td>
                    <a href="<%= `/courses/${course.id}/edit` %> ">
                        Edit
                    </a>
                </td>

                <td>
                    <a href="<%= `/courses/${course.id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure')">
                        Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>