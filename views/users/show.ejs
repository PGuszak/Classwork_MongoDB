<h2 class="center">User Data for <%= user.name.first%>
        <%= user.name.last%>
</h2>
<table class="table">
    <tbody>
        <tr>
            <!--this makes a row-->
            <td>Name:</td>
            <td>
                <%= user.name.first %>
                    <%= user.name.last%>
            </td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                <%= user.email %>
            </td>
        </tr>
        <tr>
            <td>Zip Code:</td>
            <td>
                <%= user.zipCode %>
            </td>
        </tr>
        <tr>
            <td>Num of Courses:</td>
            <td>
                <%= user.courses.length %>
            </td>
        </tr>
    </tbody>
</table>

<a href="/users">
    <span class="button">View all users</span>
</a>