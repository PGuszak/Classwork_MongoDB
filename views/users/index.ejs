<h2 class="center">User Table</h2>
<table class ="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td>
                    <a href="<%= `/user/$user._id` %>">
                        <%= user.name %>
                    </a>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.zipCode %>
                </td>
                <td>
                    <a href="<%= `/user/${user._id}/edit` %>">
                        Edit
                    </a>
                </td>
                <td> <!-- handles the req also as a delte req-->
                    <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm(`Are yuou sure?`)">
                        Delete
                    </a>
                </td>
                
            </tr>
        <% }) %>
    </tbody>
</table>